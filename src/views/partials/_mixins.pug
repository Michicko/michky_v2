mixin project_footer_card(projectInfos)
  - const positions = projectInfos.position.split(',')
  - const works = projectInfos.work.split(',')
  .project__footer-card
    .card__info
      span.title position 
      h3 
        each postion in positions 
          span !{postion}
    .card__info 
      span.title work
      h3 
        each work in works 
          span !{work}
    .card__info 
      span.title organization 
      h3 !{projectInfos.organization}
    .card__info 
      span.title year 
      h3 !{projectInfos.year}
    .card__info 
      span.title website 
      a.link.no-hvr.light(href=`${projectInfos.website}` target='_blank') !{projectInfos.website.split('/')[2]}

mixin cta()
  section.cta.container
    h2
      span Interested in working
      span together on a project?
    p.text Feel free to 
      a(href="/contact").link contact
      |  me for any project or collaborations.

mixin note(note)
  li.note
    .date 
      - const months = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC']
      - const [year, month, day] = note.date.split('-'); 
      p.month !{months[+month]}
      p.day !{day}
    .note__content
      a(href=`/notes/${note.slug.toLowerCase()}`) 
        h2 !{note.title}
        p.category !{note.category} 
      p.desc !{note.description}
      if note.coverImage 
        img.cover-img(src=`${note.coverImage}`, alt=`${note.title}`)

