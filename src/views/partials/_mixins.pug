mixin logo()
  a(href="/").logo 
    img(src="/images/logo.png" alt="michael logo").logo__img

mixin navList(navlist)
  .nav__list
    each link in navlist 
      - const classname = (url === "/" && link === "home") ? "nav__link nav__link--active" : url === `/${link}` ? "nav__link nav__link--active" : "nav__link"
      a(href=`/${link === 'home' ? '' : link}` class=classname) #{link}

mixin project(project)
  div(class='project__wrapper' style=`background: ${project.background}`)
    a(href=`/${project.slug}`).project
      .project__info 
        p.project__category #{project.category}
        h3.project__name #{project.name}
      img(data-src=`/images/${project.coverImage}`, alt=`${project.name}` loading="lazy").project__coverImage 

